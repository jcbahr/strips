(start blockworld ; this is a comment
	;; this is the initial state
        (initial
                (on blockB table)
                (off blockA table))
	;; this is the goal state
        (goal
                (elephant blockA blockB)
                (on blockB table))
	;; these are actions
        (actions
                (move
                        (parameters		; parameters to "move"
                                ?x ?y ?z)
                        (preconditions		; requirements for "move"
                                (on ?x ?y))
                        (effects		; add-effects of "move'
                                (on ?x ?z))
			(delete-effects		; delete-effects of "move"
				(on ?x ?y)))))
